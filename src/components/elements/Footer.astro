        itemLink:"#"
    },
    {
        itemText:"تحليل البيانات",
        itemLink:"#"
    }
]

const footerSupport = [
    {
        itemText:"الأسعار",
        itemLink:"#"
    },
    {
        itemText:"الدليل الإرشادي",
        itemLink:"#"
    },
    {
        itemText:"الأسئلة الشائعة",
        itemLink:"#"
    },
    {
        itemText:"اتصل بنا",
        itemLink:"#"
    }
]

const footerCompany = [
    {
        itemText:"من نحن",
        itemLink:"/about"
    },
    {
        itemText:"المدونة",
        itemLink:"#"
    },
    {
        itemText:"الوظائف",
        itemLink:"#"
    },
    {
        itemText:"شركاؤنا",
        itemLink:"#"
    }
]

