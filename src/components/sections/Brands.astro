---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

const brandCollaborations = Array.from({ length: 31 }, (_, i) => ({
    name: `Brand ${i + 1}`,
    logo: `/logos/${i + 1}.png`, // Corrected logo file paths
    behanceLink: `https://www.behance.net/your-profile/project${i + 1}`
}));
---

<section>
    <Container className="space-y-8">
        <div class="text-center max-w-3xl mx-auto">
            <Title>
                شركاء نجاحنا
            </Title>
        </div>
        <div class="flex justify-center flex-wrap gap-4">
            {brandCollaborations.map(brand => (
                <a href={brand.behanceLink} target="_blank" rel="noopener noreferrer" 
                   class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group transition-all duration-300 hover:scale-105">
                    <div class="h-7 sm:h-10 w-auto relative overflow-hidden">
                        <img src={brand.logo} alt={brand.name} 
                             class="h-full w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-105"
                             width="100" height="60">
                        <span class="absolute inset-0 bg-gradient-to-t from-black/20 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></span>
                    </div>
                    <p class="mt-3 text-sm text-center text-heading-3 opacity-0 group-hover:opacity-100 transition-opacity">
                        عرض المشروع
                    </p>
                </a>
            ))}
        </div>
    </Container>
</section>